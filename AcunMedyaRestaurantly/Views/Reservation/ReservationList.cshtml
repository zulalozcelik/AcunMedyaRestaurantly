﻿@model List<AcunMedyaRestaurantly.Entities.Reservation>
@{
    ViewBag.Title = "ReservationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Ana Sayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Rezervasyonlar</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Rezervasyonlar</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ad - Soyad</th>
                                    <th>E-Posta</th>
                                    <th>Telefon</th>
                                    <th>Açıklama</th>
                                    <th>Tarih</th>
                                    <th>Saat</th>
                                    <th>Kişi Sayısı</th>
                                    <th>Rezervasyon Durumu</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <th>@item.Name</th>
                                        <th>@item.Email</th>
                                        <th>@item.Phone</th>
                                        <th>@item.Description</th>
                                        <th>@item.ReservationDate</th>
                                        <th>@item.Time</th>
                                        <th>@item.GuestCount</th>
                                        @if (item.ReservationStatus == "Onay Bekliyor")
                                        {
                                            <th><i class="fa fa-circle-o text-info  mr-2"></i> Onay Bekliyor...</th>
                                        }
                                        @if (item.ReservationStatus == "Onaylandı")
                                        {
                                            <th><i class="fa fa-circle-o text-success  mr-2"></i> Onaylandı...</th>
                                        }
                                        @if (item.ReservationStatus == "İptal Edildi")
                                        {
                                            <th><i class="fa fa-circle-o text-danger  mr-2"></i> Reddedildi...</th>
                                        }

                                        <td><a href="/Reservation/ReservationDelete/@item.ReservationId" class="btn btn-danger"><i class="fa fa-close color-muted m-r-5"></i> Sil</a></td>
                                        <td><a href="/Reservation/ReservationEdit/@item.ReservationId" class="btn btn-info gradient-1">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Reservation/ReservationCreate/" class="btn btn-success">Rezervasyon Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>