﻿@model List<AcunMedyaRestaurantly.Entities.Reservation>
@{
    ViewBag.Title = "ReservationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}
<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Ana Sayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Rezervasyonlar</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Rezervasyonlar</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ad - Soyad</th>
                                    <th>E-Posta</th>
                                    <th>Telefon</th>
                                    <th>Açıklama</th>
                                    <th>Tarih</th>
                                    <th>Saat</th>
                                    <th>Kişi Sayısı</th>
                                    <th>Rezervasyon Durumu</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Description</td>
                                        <td>@item.ReservationDate</td>
                                        <td>@item.Time</td>
                                        <td>@item.GuestCount</td>
                                        <td>
                                            @if (item.ReservationStatus == "Onay Bekliyor")
                                            {
                                                <span class="badge badge-warning"><i class="fa fa-circle-o text-warning mr-2"></i> Onay Bekliyor</span>
                                            }
                                            else if (item.ReservationStatus == "Onaylandı")
                                            {
                                                <span class="badge badge-success"><i class="fa fa-circle-o text-success mr-2"></i> Onaylandı</span>
                                            }
                                            else if (item.ReservationStatus == "İptal Edildi")
                                            {
                                                <span class="badge badge-danger"><i class="fa fa-circle-o text-danger mr-2"></i> Reddedildi</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Reservation/ReservationDelete/@item.ReservationId" class="btn btn-danger">
                                                <i class="fa fa-close"></i> Sil
                                            </a>
                                        </td>
                                        <td>
                                            @if (item.ReservationStatus == "Onay Bekliyor")
                                            {
                                                <a href="/Reservation/ReservationEdit/@item.ReservationId" class="btn btn-warning">Güncelle</a>
                                            }
                                            else
                                            {
                                                <a href="/Reservation/ReservationEdit/@item.ReservationId" class="btn btn-info">Güncelle</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Reservation/ReservationCreate/" class="btn btn-success">Rezervasyon Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
