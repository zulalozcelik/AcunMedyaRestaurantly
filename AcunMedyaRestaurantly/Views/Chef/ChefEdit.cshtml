﻿@model AcunMedyaRestaurantly.Entities.Chef
@{
    ViewBag.Title = "ChefEdit";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Şef Güncelleme</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Şef Güncelleme Formu</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            @Html.HiddenFor(x => x.ChefId)
                            <label>Şef</label>
                            @Html.TextBoxFor(x => x.ChefName, new { @class = "form-control" })
                            <label>Açıklama</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <label>Resim</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        </div>

                        <button type="submit" class="btn btn-dark gradient-2">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>