@model AcunMedyaRestaurantly.Entities.Event

@{
    ViewBag.Title = "EventEdit";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Etkinlik Güncelleme</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Etkinlik Güncelleme Formu</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            <label>#</label>
                            @Html.HiddenFor(x => x.EventId)
                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <label>Fiyat</label>
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                            <label>Açıklama </label>
                            @Html.TextBoxFor(x => x.Description1, new { @class = "form-control" })
                            <label>Açıklama </label>
                            @Html.TextBoxFor(x => x.Description2, new { @class = "form-control" })
                            <label>Açıklama </label>
                            @Html.TextBoxFor(x => x.Description3, new { @class = "form-control" })
                            <label>Açıklama </label>
                            @Html.TextBoxFor(x => x.Description4, new { @class = "form-control" })
                            <label>Resim</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        </div>

                        <button type="submit" class="btn btn-dark gradient-2">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

