﻿@model List<AcunMedyaRestaurantly.Entities.Product>
<section id="menu" class="menu section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Menu</h2>
            <p>Check Our Tasty Menu</p>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="menu-flters">
                    <li data-filter="*" class="filter-active">All</li>
                    @foreach (var category in Model.Select(x => x.Category.CategoryName).Distinct())
                    {
                        <li data-filter=".filter-@category.ToLower().Replace(" ","-")">@category</li>
                    }
                </ul>
            </div>
        </div>

        <div class="row menu-container" data-aos="fade-up" data-aos-delay="200">

            @foreach (var item in Model)
            {
                <div class="col-lg-6 menu-item filter-@item.Category.CategoryName.ToLower().Replace(" ","-")">
                    <img src="@item.ImageUrl" class="menu-img" alt="">
                    <div class="menu-content">
                        <a href="#">@item.Name</a><span>$ @item.Price</span>
                    </div>
                    <div class="menu-ingredients">
                        @item.Description
                    </div>
                </div>

            }



        </div>

    </div>
</section>