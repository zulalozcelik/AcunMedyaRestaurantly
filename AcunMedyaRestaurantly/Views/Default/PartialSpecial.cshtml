﻿
<section id="special" class="special">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Spesyellerimiz</h2>
            <p>Bizim Spesiyalllerimize de Göz Gezdirebilirsiniz</p>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-3">
                <ul class="nav nav-tabs flex-column">
                    @foreach (var item in Model)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(Model.IndexOf(item) == 0 ? "active show" : "")" data-bs-toggle="tab" href="#tab-@item.SpecialId">@item.Title</a>
                        </li>
                    }
                </ul>
            </div>

            <div class="col-lg-9 mt-4 mt-lg-0">
                <div class="tab-content">
                    @foreach (var item in Model)
                    {
                        <div class="tab-pane @(Model.IndexOf(item) == 0 ? "active show" : "")" id="tab-@item.SpecialId">
                            <div class="row">
                                <div class="col-lg-8 details order-2 order-lg-1">
                                    <h3>@item.Title</h3>
                                    <p class="fst-italic">@item.ShortDescription</p>
                                    <p>@item.FullDescription</p>
                                </div>
                                <div class="col-lg-4 text-center order-1 order-lg-2">
                                    <img src="@item.ImageUrl" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</section><!-- End Specials Section -->