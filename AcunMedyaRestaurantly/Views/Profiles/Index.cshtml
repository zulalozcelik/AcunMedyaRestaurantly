﻿@model AcunMedyaRestaurantly.Entities.Admin


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Profil</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profil Sayfası</h4>
                <div class="basic-form">
                    <form method="post" enctype="multipart/form-data">

                        <div class="form-group">

                            <input type="hidden" name="AdminId" value="@Model.AdminId" />
                            <label>İsim</label>
                            <input type="text" name="Name" value="@Model.Name" class="form-control" />

                            <label>Soy İsim</label>
                            <input type="text" name="SurName" value="@Model.SurName" class="form-control" />

                            <label>Kullanıcı Adı</label>
                            <input type="text" name="UserName" value="@Model.UserName" class="form-control" />


                            <label>Email</label>
                            <input type="text" name="Email" value="@Model.Email" class="form-control" />


                            <label>resmi</label>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mt-2">
                                    <p>Mevcut resim</p>
                                    <img src="@Model.ImageUrl" style="width:100px; height:100px;" class="img-thumbnail" />
                                </div>
                            }
                            <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control" />

                            <label>resİM YÜKLE </label>
                            <input type="file" name="ImageFile" value="@Model.ImageFile" class="form-control" />

                            <label>Şifre</label>
                            <input type="text" name="Password" class="form-control" />
                            <p>
                                @Html.ValidationSummary()
                            </p>
                        </div>

                        <button type="submit" class="btn btn-dark gradient-2">Profili Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>